<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/contacts_title_fragment"
        android:name="sensorapp.shdccontactor.ContactsTitleFragment"
        />

    <FrameLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/contacts_content_layout"
        >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contacts_content_fragment"
            android:name="sensorapp.shdccontactor.MemberContentFragment"
            />

    </FrameLayout>

</LinearLayout>
